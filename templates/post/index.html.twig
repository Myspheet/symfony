{% extends 'dashboard.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">slug</th>
      <th scope="col">body</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
  {% for post in posts %}
        <tr>
      <th scope="row">{{ post.id }}</th>
      <td>{{ post.title }}</td>
      <td>{{ post.slug}}</td>
      <td>{{ post.createdAt|date("m/d/Y") }}</td>
      <td><a href="{{ path('dashboard.edit', {id : post.id}) }}" class="btn btn-success">edit</a> <a href="{{ path('dashboard.delete', {id : post.id}) }}" class="btn btn-danger">delete</a></td>
    </tr>
  {% endfor %}

  </tbody>
</table>
{% endblock %}
